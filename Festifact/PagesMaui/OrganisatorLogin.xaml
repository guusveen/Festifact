<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Festifact.PagesMaui.OrganisatorLogin"
             Title="Organisator Login">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Organisator Login" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />

            <Label Text="Email" FontSize="16" />
            <Entry x:Name="EmailEntry" Placeholder="Email" />

            <Label Text="Password" FontSize="16" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <Button Text="Login" Clicked="LoginButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
