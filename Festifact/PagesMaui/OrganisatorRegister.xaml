<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Festifact.PagesMaui.OrganisatorRegister"
             Title="Organisator Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Register Organisator" FontSize="Title" HorizontalOptions="Center" />

            <Label Text="Email" FontSize="16" />
            <Entry Placeholder="Email" x:Name="EmailEntry" />

            <Label Text="Name" FontSize="16" />
            <Entry Placeholder="Name" x:Name="NameEntry" />

            <Label Text="Password" FontSize="16" />
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />

            <Button Text="Register" Clicked="RegisterButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
