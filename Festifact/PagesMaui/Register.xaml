<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Festifact.PagesMaui.Register"
             Title="Register">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Register" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />

            <Label Text="Email" FontSize="16" />
            <Entry Placeholder="Email" x:Name="EmailEntry" />

            <Label Text="Password" FontSize="16" />
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />

            <Label Text="Name" FontSize="16" />
            <Entry Placeholder="Name" x:Name="NameEntry" />

            <Label Text="Address" FontSize="16" />
            <Entry Placeholder="Address" x:Name="AddressEntry" />

            <Label Text="Birth Date" FontSize="16" />
            <DatePicker x:Name="BirthDatePicker" />

            <Button Text="Register" Clicked="RegisterButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
